<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivCommentDp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/user_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCommentName"
        android:fontFamily="@font/poppins_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Rachael Bartoz  "
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/ivCommentDp"
        app:layout_constraintTop_toTopOf="@+id/ivCommentDp" />

    <TextView
        android:id="@+id/txtCommentText"
        android:fontFamily="@font/brfirma_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="a very beautiful house "
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtCommentTime"
        app:layout_constraintStart_toStartOf="@+id/txtCommentName"
        app:layout_constraintTop_toBottomOf="@+id/txtCommentName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtCommentTime"
        android:fontFamily="@font/brfirma_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2h"
        android:textColor="#86C6C6"
        android:textSize="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtCommentName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/txtCommentName" />
</androidx.constraintlayout.widget.ConstraintLayout>